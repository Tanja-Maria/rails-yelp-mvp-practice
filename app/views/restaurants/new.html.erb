<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, as: :select, collection: Restaurant::CATEGORIES, prompt: "Choose category" %>
  <%= f.button :submit %>
<% end %>

<%= link_to "Go back", restaurants_path %>
